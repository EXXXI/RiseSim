<UserControl x:Class="RiseSim.Views.SkillSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RiseSim.Views"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="150">
    <StackPanel Orientation="Horizontal">
        <ComboBox Name="nameBox" Width="100" ItemsSource="{Binding Skills}" SelectedIndex="0" SelectionChanged="NameBox_SelectionChanged" SelectedItem="{Binding SkillName}">
        </ComboBox>
        <ComboBox Name="levelBox" Width="50" ItemsSource="{Binding SkillLevels}" SelectedItem="{Binding SkillLevel}" />
    </StackPanel>
</UserControl>
