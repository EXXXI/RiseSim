<UserControl x:Class="RiseSim.Views.Controls.CharmRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RiseSim.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="330">
    <Border BorderThickness="0,0,0,1" BorderBrush="Black">
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="300" Text="{Binding DispName.Value}"/>
            <Button x:Name="deleteCharmButton" Width="30" Content="削除" Command="{Binding DeleteCharmCommand}"></Button>
        </StackPanel>
    </Border>
</UserControl>
