<UserControl x:Class="RiseSim.Views.Controls.SkillSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RiseSim.Views"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="150">
    <StackPanel Orientation="Horizontal">
        <ComboBox Name="nameBox" Width="100" ItemsSource="{Binding Skills.Value, Mode=OneWay}" SelectedIndex="0" SelectedItem="{Binding SkillName.Value}">
        </ComboBox>
        <ComboBox Name="levelBox" Width="50" ItemsSource="{Binding SkillLevels.Value, Mode=OneWay}" SelectedItem="{Binding SkillLevel.Value}" />
    </StackPanel>
</UserControl>
