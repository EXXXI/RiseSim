<UserControl x:Class="RiseSim.Views.EquipRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RiseSim.Views" xmlns:viewmodels="clr-namespace:RiseSim.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:EquipRowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="220">
    <StackPanel Orientation="Horizontal">
        <TextBlock Width="60" Text="{Binding DispKind}" TextAlignment="Right"/>
        <TextBlock Width="100" Text="{Binding DispName}"/>
        <Button x:Name="excludeButton" Width="30" Content="除外" Click="ExcludeButton_Click"></Button>
        <Button x:Name="includeButton" Width="30" Content="固定" Click="IncludeButton_Click"></Button>
    </StackPanel>
</UserControl>
