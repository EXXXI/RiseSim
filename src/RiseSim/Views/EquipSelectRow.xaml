<UserControl x:Class="RiseSim.Views.EquipSelectRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RiseSim.Views" xmlns:viewmodels="clr-namespace:RiseSim.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:EquipSelectRowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="27" d:DesignWidth="250">
    <StackPanel Orientation="Horizontal">
        <TextBlock Width="60" Text="{Binding DispKind}" TextAlignment="Right"/>
        <ComboBox x:Name="equipCombo" Width="130" ItemsSource="{Binding Equips}" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DispName}" Margin="2.5"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="excludeButton" Width="30" Content="除外" Click="ExcludeButton_Click"></Button>
        <Button x:Name="includeButton" Width="30" Content="固定" Click="IncludeButton_Click"></Button>
    </StackPanel>
</UserControl>
